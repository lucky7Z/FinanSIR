	 <button onclick="Mortgage(); myalert();" class="btn btn-success" id="btnCalculate">Submit</button>
	 
	 
	 <script type="text/javascript">
	 
	 
	 function Mortgage(){
		 var amount = document.getElementById('mortgageAmount').value; 
		 var interest_rate = document.getElementById('interestRate').value;
		 var months = document.getElementById('mortgagePeriod').value;
		 
		 document.getelementById('total').value= amount * interest_rate * months;
	 }

	 </script>
